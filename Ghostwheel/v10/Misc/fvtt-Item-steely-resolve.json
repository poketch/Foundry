    "itemacro": {
      "macro": {
        "name": "Steely Resolve",
        "type": "script",
        "scope": "global",
        "command": "if (game.combat === null) {return;}\n\n\nlet updates = args[1].updates;\n\nconst actor = args[1].sourceActor;\nconst damage = args[1].options.dhp * -1;\nconst resource = actor.system.resources.primary;\n\nif (damage < (resource.max - resource.value)) {\n\nactor.update({\"system.resources.primary.value\": resource.value + damage})\n\nsetProperty(updates, \"system.attributes.hp.value\", updates.system.attributes.hp.value + damage);\n\n\n} else {\n\nconst diff = damage - (resource.max - resource.value);\n\nactor.update({\"system.resources.primary.value\": resource.max})\n\nsetProperty(updates, \"system.attributes.hp.value\", updates.system.attributes.hp.value + damage - diff);\n\n}",
